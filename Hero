public class Hero
{
    String name;
    int hitPoints;

    public Hero(String name)
    {
        this.name = name;
        this.hitPoints = 100;
    }

    public String getName()
    {
        return name;
    }

    public int getHitPoints()
    {
        return hitPoints;
    }

    public String toString()
    {
        String result = "name ='" + this.getName()+ " 'hitPoints ="+ this.getHitPoints();
        return result;
    }

    public void attack(Hero opponent)
    {
        double randnum = Math.random();
        if(randnum < 0.5)
        {
            opponent.hitPoints = opponent.hitPoints - 10;
        }
        else
        {
            this.hitPoints = this.hitPoints-10;
        }
    }

    public void senzuBean()
    {
        hitPoints = 100;
    }

    private void fightUntilTheDeathHelper(Hero opponent)
    {
        while(opponent.getHitPoints() > 0 && this.getHitPoints() > 0)
        {
            attack(opponent);
        }
    }

    public String fightUntilTheDeath(Hero opponent)
    {
        fightUntilTheDeathHelper(opponent);
        String result = this.getName() + ":" + this.getHitPoints() + "      " + opponent.getName()+ ":" +opponent.getHitPoints();
        return result;
    }

    public int[] nFightsToTheDeathHelper(Hero opponent, int n)
    {
        int[] a = new int[n];
        for(int i = 0; i<n; i++)
        {
            fightUntilTheDeath(opponent);
            if(opponent.getHitPoints() == 0)
            {
                a[i] = 0;
            }
            else
            {
                a[i] = 1;
            }
            this.senzuBean();
            opponent.senzuBean();
        }
        return a;
    }

    public String nFightsToTheDeath(Hero opponent, int n)
    {
        String winner = null;
        int[] a = nFightsToTheDeathHelper(opponent, n);
        int HeroWinTimes = 0;
        int opponentWinTimes = 0;

        for(int i = 0; i<n; i++)
        {
            if(a[i]==0)
                HeroWinTimes++;
            else
                opponentWinTimes++;
        }

        if(HeroWinTimes == opponentWinTimes)
            return "OMG!I twas actually a draw!";

        if (HeroWinTimes > opponentWinTimes)
            winner = this.getName();
        else if(HeroWinTimes < opponentWinTimes)
            winner = opponent.getName();

        return winner + " wins!";
    }

    public void dramaticFightToTheDeath(Hero opponent) throws InterruptedException
    {
        while(opponent.getHitPoints() > 0 && this.getHitPoints() > 0)
        {
            attack(opponent);
            System.out.println(this.getName() + ":" + this.getHitPoints() + "      " + opponent.getName()+ ":" +opponent.getHitPoints());
            Thread.sleep(1000);
        }
        if(opponent.getHitPoints() == 0)
            System.out.println(opponent.getName() + " wins!");
        else
            System.out.println(this.getName() + " wins!");
    }
}


